<?xml version="1.0"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="hotel_invoice_wizard_selection">
			<field name="name">wizard.selection.form</field>
			<field name="model">wizard.selection</field>
			<field name="arch" type="xml">
				<form string="Select">
						<group>
							<field name="name" invisible="1" />
						</group>

						<group>
							<field name="category_id"/>

						</group>
						<footer>
							<button name="print_report" string="Print" type="object" class="oe_highlight" />Or
							<button name="view_report" string="View" type="object" class="oe_highlight" />
							Or
							<button string="Cancel" class="oe_link" special="cancel" />
						</footer>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="hotel_estimated_bill_wizard">
			<field name="name">estimated.bill.form</field>
			<field name="model">estimated.bill</field>
			<field name="arch" type="xml">
				<form>
						<group>
							<field name="name" invisible="1" />
						</group>

						<group>
							<field name="date"/>

						</group>
						<footer>
							<button name="print_report" string="Print" type="object" class="oe_highlight" />Or
							<button name="view_report" string="View" type="object" class="oe_highlight" />
							Or
							<button string="Cancel" class="oe_link" special="cancel" />
						</footer>
				</form>
			</field>
		</record>


</data>
</openerp>